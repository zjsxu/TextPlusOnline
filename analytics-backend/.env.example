# 应用配置
NODE_ENV=development
PORT=3001
API_VERSION=v1

# 数据库配置
POSTGRES_URL=postgresql://analytics:password@localhost:5432/analytics_db
REDIS_URL=redis://localhost:6379

# InfluxDB 配置
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=textdiff
INFLUXDB_BUCKET=analytics

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 短信配置 (可选)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# 安全配置
CORS_ORIGIN=https://zjsxu.github.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
LOG_LEVEL=info
METRICS_ENABLED=true

# 报警配置
ALERT_EMAIL_RECIPIENTS=admin@example.com
ALERT_SMS_RECIPIENTS=+1234567890

# 文件存储配置 (可选)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=textdiff-analytics-reports